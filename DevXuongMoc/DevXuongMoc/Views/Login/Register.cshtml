@model DevXuongMoc.Models.Customer
@{
    ViewData["Title"] = "Đăng ký";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<body>
    <div class="position-relative vh-100">
        <!-- Background image -->
        <!-- Overlay with lighter opacity -->
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.3); z-index: 1;"></div>

        <!-- Form container -->
        <div class="d-flex justify-content-center align-items-center h-100 position-relative" style="z-index: 2;">
            <section class="bg-white p-5 rounded-4 shadow-lg" style="max-width: 400px; width: 100%; z-index: 2;">
                <h2 class="text-center mb-5 text-dark">Đăng ký</h2>
                <form asp-action="Register" method="post">
                    <!-- Full Name input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Name" type="text" id="form3Example1"
                               class="form-control form-control-lg custom-input"
                               placeholder="Họ và tên" required />
                    </div>

                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Username" type="text" id="form3Example2"
                               class="form-control form-control-lg custom-input"
                               placeholder="Tên tài khoản" required />
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" type="email" id="form3Example3"
                               class="form-control form-control-lg custom-input"
                               placeholder="Email" required />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" type="password" id="form3Example4"
                               class="form-control form-control-lg custom-input"
                               placeholder="Mật khẩu" required />
                    </div>

                    <!-- Address input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Address" type="text" id="form3Example5"
                               class="form-control form-control-lg custom-input"
                               placeholder="Địa chỉ" />
                    </div>

                    <!-- Submit button and login link -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg custom-btn" style="width: 100%;">
                            Đăng ký
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Đã có tài khoản?
                            <a asp-controller="Login" asp-action="Index" class="link-danger">Đăng nhập ngay</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
