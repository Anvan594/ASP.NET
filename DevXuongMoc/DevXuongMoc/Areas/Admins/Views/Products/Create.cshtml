@model DevXuongMoc.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">Thêm sản phẩm mới</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Cid" class="form-label">Danh mục</label>
                    <input asp-for="Cid" class="form-control" placeholder="Nhập danh mục" />
                    <span asp-validation-for="Cid" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label">Mã sản phẩm</label>
                    <input asp-for="Code" class="form-control" placeholder="Nhập mã sản phẩm" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Title" class="form-label">Tên sản phẩm</label>
                    <input asp-for="Title" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Content" class="form-label">Nội dung chi tiết</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nhập nội dung chi tiết"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PriceOld" class="form-label">Giá cũ</label>
                    <input asp-for="PriceOld" class="form-control" placeholder="Nhập giá cũ" />
                    <span asp-validation-for="PriceOld" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PriceNew" class="form-label">Giá mới</label>
                    <input asp-for="PriceNew" class="form-control" placeholder="Nhập giá mới" />
                    <span asp-validation-for="PriceNew" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Size" class="form-label">Kích thước</label>
                    <input asp-for="Size" class="form-control" placeholder="Nhập kích thước" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Views" class="form-label">Lượt xem</label>
                    <input asp-for="Views" class="form-control" placeholder="Nhập lượt xem" />
                    <span asp-validation-for="Views" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Likes" class="form-label">Lượt thích</label>
                    <input asp-for="Likes" class="form-control" placeholder="Nhập lượt thích" />
                    <span asp-validation-for="Likes" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Star" class="form-label">Đánh giá sao</label>
                    <input asp-for="Star" class="form-control" placeholder="Nhập số sao" />
                    <span asp-validation-for="Star" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
