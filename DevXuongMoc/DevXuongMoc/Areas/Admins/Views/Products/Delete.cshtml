@model DevXuongMoc.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">Delete Product</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this product?</h3>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <h4>Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Cid)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cid)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Code)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Content)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Content)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-9">
                    <img width="150px" src="@Html.DisplayFor(model => model.Image)" class="img-fluid" alt="Product Image" />
                </dd>

                <!-- Add other fields as required -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PriceOld)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PriceOld)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

<!-- CSS style -->
<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
    }

    .card-body {
        background-color: #ffffff;
    }

    .dl-horizontal dt {
        text-align: right;
        padding-right: 10px;
    }

    .dl-horizontal dd {
        margin-left: 0;
    }

    .btn {
        padding: 10px 20px;
    }

    .btn-lg {
        font-size: 1.25rem;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>
