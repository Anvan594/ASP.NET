@model IEnumerable<NetcoreMVCLap3.Models.Book>
@foreach (var item in Model)
{
    <div class="col-xs-3 col-sm col-md-3 col-lg-3">
        <div class="thumbnail">
            <img src="@item.Image" />
            <div class="caption">
                <h3>@item.Title</h3>
                <p>
                    Price:@item.Price
                </p>
            </div>
        </div>
    </div>
}